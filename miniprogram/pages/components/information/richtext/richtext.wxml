<view style="margin-bottom:64px">
  <demo-block title="基础用法">

    <view class="page-section-title">传入html字符串</view>
    <demo-code height="60">
      <view slot="demoname" class="page-section">
        <view class="rich-text-wrp">
          <rich-text nodes="{{html}}" bindtap="tap"></rich-text>
        </view>
      </view>
      <view slot="democode">
        <view class="code-type">html代码</view>
        <text>
          {{jichu[0].html}}
        </text>

        <view class="code-type">js代码</view>
        <text>
          {{ jichu[0].js }}
        </text>

        <view class="code-type">css代码</view>
        <text>
          {{ jichu[0].css }}
        </text>

      </view>
    </demo-code>

    <view class="page-section-title">传入节点列表</view>
    <demo-code height="60">
      <view slot="demoname" class="page-section">
        <view class="rich-text-wrp">
          <rich-text nodes="{{nodes}}" bindtap="tap"></rich-text>
        </view>
      </view>
      <view slot="democode">
        <view class="code-type">html代码</view>
        <text>
          {{jichu[1].html}}
        </text>

        <view class="code-type">js代码</view>
        <text>
          {{ jichu[1].js }}
        </text>

        <view class="code-type">css代码</view>
        <text>
          {{ jichu[1].css }}
        </text>

      </view>
    </demo-code>
  </demo-block>

  <demo-block title="增强用法">
    <view class="page-section-title">显示连续空格</view>
    <demo-code height="60">
      <view slot="demoname" class="page-section">
        <view class="rich-text-wrp">
          <rich-text space="nbsp" nodes="{{nbsphtml}}"></rich-text>
        </view>
      </view>
      <view slot="democode">
        <view class="code-type">html代码</view>
        <text>
          {{zengqiang[0].html}}
        </text>

        <view class="code-type">js代码</view>
        <text>
          {{ zengqiang[0].js }}
        </text>
      </view>
    </demo-code>
    <demo-code height="60">
      <view slot="demoname" class="page-section">
        <view class="rich-text-wrp">
          <rich-text space="ensp" nodes="{{ensphtml}}"></rich-text>
        </view>
      </view>
      <view slot="democode">
        <view class="code-type">html代码</view>
        <text>
          {{zengqiang[1].html}}
        </text>

        <view class="code-type">js代码</view>
        <text>
          {{ zengqiang[1].js }}
        </text>

      </view>
    </demo-code>
    <demo-code height="60">
      <view slot="demoname" class="page-section">
        <view class="rich-text-wrp">
          <rich-text space="emsp" nodes="{{emsphtml}}"></rich-text>
        </view>
      </view>
      <view slot="democode">
        <view class="code-type">html代码</view>
        <text>
          {{zengqiang[2].html}}
        </text>

        <view class="code-type">js代码</view>
        <text>
          {{ zengqiang[2].js }}
        </text>
      </view>
    </demo-code>
  </demo-block>
</view>

