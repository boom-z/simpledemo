<view style="margin-bottom:64px">

  <demo-block title="基础用法">
    <demo-code height="120" htmlcode="{{sliderjichu[0].html}}">
      <slider bindchange="sliderChange">slider滑块</slider>
    </demo-code>
  </demo-block>

  <demo-block title="增强用法">
    <demo-code height="120" htmlcode="{{sliderzengqiang[0].html}}">
      <view>
        <text class="section__title">显示当前value:</text>
        <slider show-value/>
      </view>
    </demo-code>

    <demo-code height="120" htmlcode="{{sliderzengqiang[1].html}}">
      <view>
        <text class="section__title">设置step:</text>
        <slider show-value step="5"/>
      </view>
    </demo-code>

    <demo-code height="120" htmlcode="{{sliderzengqiang[2].html}}">
      <view>
        <text class="section__title">设置最小/最大值：</text>
        <slider min="50" max="200" show-value/>
      </view>
    </demo-code>

    <demo-code height="120" htmlcode="{{sliderzengqiang[3].html}}">
      <view>
        <text class="section__title">改变滑块颜色：</text>
        <slider block-color="#DBFC00" show-value/>
      </view>
    </demo-code>

    <demo-code height="120" htmlcode="{{sliderzengqiang[4].html}}">
      <view>
        <text class="section__title">改变滑块的大小(取值范围为 12 - 28)：</text>
        <slider block-size="12" show-value/>
      </view>
    </demo-code>

  </demo-block>

  <demo-block title="常用事件">
    <demo-code height="200" htmlcode="{{sliderevent[0].html}}" jscode="{{sliderevent[0].js}}">
      <view>
        <text class="section__title">bindchange：完成一次拖动后触发</text>
        <slider bindchange="sliderChange1"/>
        <view>slider组件当前值为：{{sliderValue1}}</view>
      </view>
    </demo-code>

    <demo-code height="200" htmlcode="{{sliderevent[1].html}}" jscode="{{sliderevent[1].js}}">
      <view>
        <text class="section__title">bindchanging：拖动中触发</text>
        <slider bindchanging="sliderChange2"/>
        <view>slider组件当前值为：{{sliderValue2}}</view>
      </view>
    </demo-code>
  </demo-block>
</view>

<view style="width:100%;position:fixed;bottom:0">
  <nav-button pre_zujian="picker" next_zujian="input"></nav-button>
</view>